generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id          Int        @id @default(autoincrement())
  studentName String
  dateOfBirth DateTime
  gender      String
  email       String     @unique
  phone       String
  address     String
  fatherName  String?
  motherName  String?
  aadhaarNumber String?
  studentPhotoBase64 String? @db.LongText
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  admission   Admission?
  fees        Fee[]
  monthlyFees MonthlyFee[]
}

model Admission {
  id            Int      @id @default(autoincrement())
  studentId     Int      @unique
  admissionDate DateTime
  classEnrolled String
  section       String
  academicYear  String
  remarks       String?
  transportType String   @default("None")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  student       Student  @relation(fields: [studentId], references: [id])
}

model Fee {
  id        Int       @id @default(autoincrement())
  studentId Int
  amount    Decimal   @db.Decimal(10, 2)
  dueDate   DateTime
  paidDate  DateTime?
  status    FeeStatus @default(PENDING)
  remarks   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  student   Student   @relation(fields: [studentId], references: [id])

  @@index([studentId], map: "Fee_studentId_fkey")
}

model MonthlyFee {
  id          Int       @id @default(autoincrement())
  studentId   Int
  month       Int       // 1-12 for months
  year        Int       // Financial year (e.g., 2025)
  tuitionFee  Decimal   @db.Decimal(10, 2)
  admissionFee Decimal  @db.Decimal(10, 2)
  totalAmount Decimal   @db.Decimal(10, 2)
  paidAmount  Decimal   @db.Decimal(10, 2) @default(0)
  dueDate     DateTime
  paidDate    DateTime?
  status      FeeStatus @default(PENDING)
  remarks     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  student     Student   @relation(fields: [studentId], references: [id])

  @@unique([studentId, month, year])
  @@index([studentId], map: "MonthlyFee_studentId_fkey")
}

model Expense {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  category    String
  amount      Decimal  @db.Decimal(10, 2)
  expenseDate DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Setting {
  id          Int      @id @default(autoincrement())
  schoolName  String
  schoolId    String   @unique
  slogan      String?
  adminName   String
  adminEmail  String   @unique
  password    String
  logoBase64       String   @db.LongText
  adminImageBase64 String   @db.LongText

  // Transport fees
  transportFeeBelow3      Float?
  transportFeeBetween3and5 Float?
  transportFeeBetween5and10 Float?
  transportFeeAbove10      Float?

  classes     Class[]  // 1-to-many relationship
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Class {
  id            Int     @id @default(autoincrement())
  name          String
  tuitionFee    Float
  admissionFee  Float
  settingId     Int
  setting       Setting @relation(fields: [settingId], references: [id])
}

enum FeeStatus {
  PAID
  PENDING
  PARTIALLY_PAID
}
